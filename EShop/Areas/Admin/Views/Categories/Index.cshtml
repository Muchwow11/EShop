@using EShop.Models;

@model IEnumerable<Categories>
@{ 
    ViewData["Title"] = "Categories";
}

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Category List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="create" class="btn btn-info">&nbsp; New Product Category</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-dark table-striped border text-white">
        <tr class="table-info">
            <th class="text-black-50">
                @Html.DisplayNameFor(c=>c.Category)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id"/>
                    </td>
                </tr>
            }
    </table>
</div>