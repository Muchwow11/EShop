@using EShop.Models;

@model IEnumerable<ProductTags>
@{
    ViewData["Title"] = "Product Tags";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="create" class="btn btn-info">&nbsp; New Product Tag</a>
    </div>
</div>
<br />
<div>
    <table class="table table-dark table-striped border text-white">
        <tr class="table-info">
            <th class="text-black-50">
                Product Tags
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>#@item.Name</td>
                <td>
                    <partial name="_ProductTagButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>